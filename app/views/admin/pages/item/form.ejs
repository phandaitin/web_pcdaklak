<% 
    const collection = 'item';
    const linkPrefix = systemConfig.prefixAdmin + `/${collection}`;
%>
 

 <% if (data.err) { %>  
    <div class="alert alert-danger" role="alert">
        <span class="close-btn">&times;</span> 
       <%= data.err %>
    </div>
 <% } %>

<div class="row">

    
               <div class="col-lg-12">
                   <div class="panel panel-default">
                       <div class="panel-heading">
                           Form 
                       </div>
                       <div class="panel-body"> 
                           <div class="row">
                               <div class="col-lg-12">
                                   <form role="form" action="<%= linkPrefix %>/save" method="POST">
                                           
                                        <div class="form-group">
                                           <label>Name</label>
                                           <input class="form-control" type="text" name="name" value="<%= data.name %>" >
                                        </div> 

                                        <div class="form-group">
                                            <label>Email </label>
                                            <input class="form-control"  type="email" name="email" value="<%= data.email %>" >
                                        </div>

                                        <div class="form-group">
                                            <label>Password</label>
                                            <input class="form-control"  type="text" name="pass" value="<%= data.pass %>" >
                                        </div>
                                    
                                        <div class="form-group">
                                            <label>Status</label>
                                            <select name="status" class="form-control" >
                                                <!-- <option value="Novalue">Choose Status</option> -->
                                                <option value="Active"  <%= (data.status == "Active") ? 'selected="selected"' : '' %> >Active</option>
                                                <option value="Inactive"  <%= (data.status == "Inactive") ? 'selected="selected"' : '' %> >Inactive</option>
                                            </select>
                                        </div>
 
                                        <div class="form-group">
                                            <label>Position</label>
                                            <select name="position" class="form-control" >
                                                 <!-- <option value="Novalue">Choose Position</option> -->
                                                 <option value='Top'  <%= (data.position == 'Top') ? selected='selected' : '' %> >Top</option>
                                                 <option value='None'  <%= (data.position == 'None') ? selected='selected' : '' %> >None</option>
                                            </select>
                                         </div>

                                        <div class="form-group">
                                            <label>Typeshow</label>
                                            <input class="form-control"  type="number"  name="typeshow" value="<%= data.typeshow %>" >                                            

                                        </div>

                                        <div class="form-group">
                                            <label>Order</label>
                                            <input class="form-control"  type="number"  name="order" value="<%= data.order %>" >
                                        </div>

                                        <div class="form-group">
                                            <label> Check radio  </label>    <br>
                                            <input type="radio" name="radio" value = 1 <%= (data.radio == 1) ? checked = 'checked': '' %>  > Yes 
                                            <input type="radio" name="radio" value = 0 <%= (data.radio == 0) ? checked = 'checked': '' %>  > No 
                                        </div>                            

                                        <div class="form-group">
                                            <label>Title</label>
                                            <input class="form-control"  type="text" name="title" value="<%= data.title %>" >
                                        </div>                                                                                
                                        
                                        <div class="form-group">
                                            <label>Content</label>
                                            <textarea class="form-control" name="content" rows="2"  id="editor1" > <%= data.content %>           </textarea>
                                            <script>
                                                // Replace the <textarea id="editor1"> with a CKEditor 4
                                                // instance, using default configuration.
                                                CKEDITOR.replace( 'editor1' );
                                            </script>
                                        </div>                                 
                                               
                                         
                                        <div class="form-group">
                                            <label>tablemainname</label>
                                            <select name="tablemain.name" class="form-control" >
                                                <!-- <option value="Novalue">Choose Status</option> -->
                                                <option value="Active"  <%= (data.status == "Active") ? selected="selected" : '' %> >Active</option>
                                                <option value="Inactive"  <%= (data.status == "Inactive") ? selected="selected" : '' %> >Inactive</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label>tablemainfullname</label>
                                            <input class="form-control"  type="text"  name="tablemainfullname" value="" >
                                        </div>
                                         
                                        <div>
                                            <input class="form-control" name="id" value="<%= data.id %>" type="hidden"  >
                                            <button type="submit" class="btn btn-primary">Submit </button>
                                            <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
                                            
                                        </div>
                                   </form>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
 