<% 
    const collection = 'chuyenmuc';
    const linkPrefix = systemConfig.prefixAdmin + `/${collection}`;
%>
 
<% if (data.err) { %>  
    <div class="alert alert-danger" role="alert">
        <span class="close-btn">&times;</span> 
       <%= data.err %>
    </div>
 <% } %>
<div class="row">
    <div class="col-lg-6">
    
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Chuyên mục
            </div>
            <div class="panel-body"> 
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" action="<%= linkPrefix %>/save" method="POST">                            
                            <div class="form-group">
                                 <label>Tên chuyên mục</label>
                                 <input class="form-control" name="name" value="<%= data.name %>" >
                             </div>                                             
                             
                             <div class="form-group">
                                 <label>Trạng thái</label>
                                 <select name="status" class="form-control" >
                                     <!-- <option value="Novalue">Choose Status</option> -->
                                     <option value="Active"  <%= (data.status == "Active") ? 'selected="selected"' : '' %> >Active</option>
                                     <option value="Inactive"  <%= (data.status == "Inactive") ? 'selected="selected"' : '' %> >Inactive</option>                                     
                                 </select>                                            
                             </div>

                             <div class="form-group">
                                 <label>Thự tự Show</label>
                                 <input type="number" class="form-control" name="order" value="<%= data.order %>" >
                             </div>   

                             <div class="form-group">
                                <label> Số bài show</label>
                                <input type="number" class="form-control" name="toppost" value="<%= data.toppost %>" >
                            </div>   

                            <div class="form-group">
                                <label>Kiểu show</label>
                                <input type="number" class="form-control" name="typeshow" value="<%= data.typeshow %>" >
                            </div>   
                                
                            <div>
                                <input class="form-control" name="id" value="<%= data.id %>" type="hidden"  >
                                <button type="submit" class="btn btn-primary">Submit </button>
                                <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 